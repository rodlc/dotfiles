{
  "mcpServers": {
    "notion": {
      "command": "node",
      "args": ["${CODE_DIR}/mcp-notion-server/build/index.js"],
      "env": {
        "NOTION_API_TOKEN": "${NOTION_API_TOKEN}",
        "NOTION_MARKDOWN_CONVERSION": "true"
      }
    },
    "rails-mcp": {
      "command": "${CODE_DIR}/rails-mcp-server/exe/rails-mcp-server",
      "args": [],
      "env": {}
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
        "Authorization": "Bearer ${GITHUB_TOKEN}"
      }
    },
    "gmail-rodlecoent": {
      "command": "node",
      "args": ["${CODE_DIR}/Gmail-MCP-Server/dist/index.js"],
      "env": {
        "GMAIL_OAUTH_PATH": "${HOME}/.gmail-mcp-rodlecoent/gcp-oauth.keys.json",
        "GMAIL_CREDENTIALS_PATH": "${HOME}/.gmail-mcp-rodlecoent/credentials.json"
      }
    },
    "gmail-rodolphe": {
      "command": "node",
      "args": ["${CODE_DIR}/Gmail-MCP-Server/dist/index.js"],
      "env": {
        "GMAIL_OAUTH_PATH": "${HOME}/.gmail-mcp-rodolphe/gcp-oauth.keys.json",
        "GMAIL_CREDENTIALS_PATH": "${HOME}/.gmail-mcp-rodolphe/credentials.json"
      }
    },
    "slack": {
      "command": "${CODE_DIR}/slack-mcp-server/slack-mcp-server",
      "args": ["--transport", "stdio"],
      "env": {
        "SLACK_MCP_XOXC_TOKEN": "${SLACK_XOXC_TOKEN}",
        "SLACK_MCP_XOXD_TOKEN": "${SLACK_XOXD_TOKEN}"
      }
    }
  }
}
